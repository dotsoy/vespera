# 启明星项目环境变量配置示例
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 数据库配置
# =============================================================================

# PostgreSQL 主数据库
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=qiming_star
POSTGRES_USER=qiming_user
POSTGRES_PASSWORD=qiming_pass_2024

# ClickHouse 时序数据库
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DB=qiming_timeseries
CLICKHOUSE_USER=qiming_user
CLICKHOUSE_PASSWORD=qiming_pass_2024

# Redis 缓存
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=qiming_redis_2024
REDIS_DB=0

# =============================================================================
# 数据源配置
# =============================================================================

# 市场时间配置
MARKET_OPEN_TIME=09:30
MARKET_CLOSE_TIME=15:00
DATA_UPDATE_INTERVAL=300

# 股票筛选条件
MIN_MARKET_CAP=50.0
EXCLUDE_ST_STOCKS=true
EXCLUDE_NEW_STOCKS_DAYS=60

# =============================================================================
# 分析参数配置
# =============================================================================

# 技术分析参数
MA_PERIODS=[5,10,20,60]
EMA_PERIODS=[12,26]
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# 资金流分析参数
VOLUME_MA_PERIOD=20
MONEY_FLOW_THRESHOLD=0.6

# 信号融合参数
MIN_TECHNICAL_SCORE=0.7
MIN_CAPITAL_SCORE=0.8
SIGNAL_CONFIDENCE_THRESHOLD=0.75

# =============================================================================
# 通知配置
# =============================================================================

# SendGrid 邮件服务 (可选)
SENDGRID_API_KEY=your_sendgrid_api_key_here
NOTIFICATION_EMAIL=your_email@example.com

# 通知开关
ENABLE_SIGNAL_ALERTS=true
ENABLE_ERROR_ALERTS=true
MIN_SIGNAL_SCORE_FOR_ALERT=0.85

# =============================================================================
# 应用配置
# =============================================================================

# 基础配置
APP_NAME=启明星股票分析系统
APP_VERSION=1.0.0
DEBUG=false

# Streamlit 配置
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# 日志配置
LOG_LEVEL=INFO
LOG_ROTATION=1 day
LOG_RETENTION=30 days
